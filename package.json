{
  "name": "weg-digital-passport",
  "version": "1.0.0",
  "description": "eIDAS-compatible Industrial Digital Passport Protocol using EAS on Arbitrum",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy:local": "npx hardhat run scripts/deploy-local.js --network localhost",
    "deploy:eidas": "npx hardhat run scripts/deploy-eidas-system.js --network localhost",
    "anvil": "anvil --host 0.0.0.0 --port 8545 --chain-id 31337",
    "anvil:fork": "anvil --host 0.0.0.0 --port 8545 --chain-id 31337 --fork-url https://arb1.arbitrum.io/rpc",
    "node": "npx hardhat node",
    "node:fork": "npx hardhat node --fork https://arb1.arbitrum.io/rpc",
    "console": "npx hardhat console --network localhost",
    "clean": "npx hardhat clean",
    "size": "npx hardhat size-contracts",
    "coverage": "npx hardhat coverage",
    "lint": "npx solhint 'contracts/**/*.sol'",
    "lint:fix": "npx solhint 'contracts/**/*.sol' --fix",
    "format": "npx prettier --write 'contracts/**/*.sol' 'scripts/**/*.js' 'test/**/*.js'"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "eidas",
    "digital-passport",
    "traceability",
    "industrial",
    "eas",
    "arbitrum",
    "qualified-signatures"
  ],
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=18.0.0",
    "chai": "^4.2.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.0",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "@ethereum-attestation-service/eas-contracts": "^1.3.0",
    "dotenv": "^16.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/luizgustavoahsc/weg-digital-passport.git"
  },
  "bugs": {
    "url": "https://github.com/luizgustavoahsc/weg-digital-passport/issues"
  },
  "homepage": "https://github.com/luizgustavoahsc/weg-digital-passport#readme"
} 